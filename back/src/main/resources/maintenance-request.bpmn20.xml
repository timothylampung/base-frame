<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns:flowable="http://flowable.org/bpmn"
             xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             typeLanguage="http://www.w3.org/2001/XMLSchema"
             expressionLanguage="http://www.w3.org/1999/XPath" targetNamespace="Fixed">
    <process id="maintenance_request_workflow" name="Work Order Workflow" isExecutable="true">
        <startEvent id="start"/>
        <sequenceFlow id="flow1.1" sourceRef="start" targetRef="maintenanceRequest_draft_ST"/>
        <serviceTask id="maintenanceRequest_draft_ST" name="draft_ST"
                     flowable:expression="#{maintenanceRequest_draft_ST.execute(execution)}"/>
        <sequenceFlow id="flow2.1" sourceRef="maintenanceRequest_draft_ST"
                      targetRef="maintenanceRequest_draft_UT"/>
        <userTask id="maintenanceRequest_draft_UT"
                  name="com.assettagging.spotit.maintenance.domain.model.DexMaintenanceRequest:DRAFTED"
                  flowable:assignee="#{maintenanceRequestRouter.findDrafterAssignee(requestId)}"
                  flowable:candidateGroups="#{maintenanceRequestRouter.findDrafterCandidates(requestId)}">
        </userTask>
        <sequenceFlow id="flow2.3" sourceRef="maintenanceRequest_draft_UT"
                      targetRef="maintenanceRequest_register_ST"/>
        <serviceTask id="maintenanceRequest_register_ST" name="register_ST"
                     flowable:expression="#{maintenanceRequest_register_ST.execute(execution)}"/>
        <sequenceFlow id="flow2.4" sourceRef="maintenanceRequest_register_ST"
                      targetRef="maintenanceRequest_register_UT"/>
        <userTask id="maintenanceRequest_register_UT"
                  name="com.assettagging.spotit.maintenance.domain.model.DexMaintenanceRequest:REGISTERED"
                  flowable:candidateGroups="#{maintenanceRequestRouter.findCheckerCandidates(requestId)}">
        </userTask>
        <sequenceFlow id="flow2.5" sourceRef="maintenanceRequest_register_UT"
                      targetRef="maintenanceRequest_check_ST"/>
        <serviceTask id="maintenanceRequest_check_ST" name="check_ST"
                     flowable:expression="#{maintenanceRequest_check_ST.execute(execution)}"/>
        <sequenceFlow id="flow2.6" sourceRef="maintenanceRequest_check_ST"
                      targetRef="maintenanceRequest_check_UT"/>
        <userTask id="maintenanceRequest_check_UT"
                  name="com.assettagging.spotit.maintenance.domain.model.DexMaintenanceRequest:CHECKED"
                  flowable:candidateGroups="#{maintenanceRequestRouter.findApproverCandidates(requestId)}">
        </userTask>
        <sequenceFlow id="flow2.7" sourceRef="maintenanceRequest_check_UT"
                      targetRef="maintenanceRequest_approve_ST"/>
        <serviceTask id="maintenanceRequest_approve_ST" name="approve_ST"
                     flowable:expression="#{maintenanceRequest_approve_ST.execute(execution)}"/>
        <sequenceFlow id="flow9.1" sourceRef="maintenanceRequest_approve_ST" targetRef="maintenanceRequest_complete_ST"/>
        <serviceTask id="maintenanceRequest_complete_ST" name="complete_ST"
                     flowable:expression="#{maintenanceRequest_complete_ST.execute(execution)}"/>
        <endEvent id="end"/>
    </process>
</definitions>